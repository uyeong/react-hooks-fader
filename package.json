{
  "name": "react-hooks-fader",
  "version": "0.0.2",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/index.d.ts",
  "repository": "git@github.com:uyeong/react-hooks-fader.git",
  "author": "U-Yeong Ju <uyeong21c@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "fade",
    "fadein",
    "fadeout",
    "show",
    "hide",
    "animation",
    "typescript"
  ],
  "scripts": {
    "build:js": "rollup -c",
    "build:cpf": "node copyfiles.js",
    "build": "concurrently -n js,cpf,tsc \"yarn build:js\" \"yarn build:cpf -w\" \"yarn tsc\"",
    "tsc": "tsc -p tsconfig.json --skipLibCheck -d --allowJs --noEmit false --emitDeclarationOnly --declarationDir dist",
    "lint:pt": "prettier --write \"src/**/*.ts*\"",
    "lint:ts": "tslint -p tsconfig.json 'src/**/*.ts*'",
    "lint": "yarn lint:pt && yarn lint:ts --fix",
    "dev": "concurrently -n js,tsc \"yarn build:js -w\" \"yarn tsc -w\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-storysource": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@types/react": "^16.9.25",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.1.0",
    "css-loader": "^3.4.2",
    "fs-extra": "^9.0.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
